<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>MyFilter1</filter-name>
        <filter-class>filters.MyFilter1</filter-class>
    </filter>
    <filter>
        <filter-name>MyFilter2</filter-name>
        <filter-class>filters.MyFilter2</filter-class>
    </filter>
    <filter>
        <filter-name>MyFilter3</filter-name>
        <filter-class>filters.MyFilter3</filter-class>
    </filter>
    <filter>
        <filter-name>MyInitParamsFilter</filter-name>
        <filter-class>filters.MyInitParamsFilter</filter-class>
        <init-param>
            <param-name>logFilename</param-name>
            <param-value>my_init_params.log</param-value>
        </init-param>
    </filter>
  
    <filter-mapping>
        <filter-name>MyFilter1</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MyFilter2</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MyFilter3</filter-name>
        <servlet-name>ValidateUserServlet</servlet-name>
    </filter-mapping>
 
    <servlet>
        <servlet-name>ValidateUserServlet</servlet-name>
        <servlet-class>controller.ValidateUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveCookiesServlet</servlet-name>
        <servlet-class>controller.RemoveCookiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterUserServlet</servlet-name>
        <servlet-class>controller.RegisterUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidateUserServlet</servlet-name>
        <url-pattern>/validateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveCookiesServlet</servlet-name>
        <url-pattern>/removeCookies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterUserServlet</servlet-name>
        <url-pattern>/registerUser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

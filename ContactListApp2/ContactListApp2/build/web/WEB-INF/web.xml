<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- the definitions for the servlets -->
    <servlet>
        <servlet-name>AddToContactListServlet</servlet-name>
        <servlet-class>contact.AddToContactListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>contact.TestServlet</servlet-class>
    </servlet>
    <!-- the mapping for the servlets -->
    <servlet>
        <servlet-name>AddToContactList2</servlet-name>
        <servlet-class>contact.AddToContactList2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToContactListServlet</servlet-name>
        <url-pattern>/addToContactList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToContactListServlet</servlet-name>
        <url-pattern>/contact/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToContactList2</servlet-name>
        <url-pattern>/addToContactList2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
